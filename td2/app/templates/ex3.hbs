<div class="container bg-info mt-5 py-3 px-3 rounded">
  <div class="text-white"><h3>Sélectionnez vos produits</h3></div>
  <div class="row">
    <div class="col-5">
      <p>Produits disponibles</p>
      {{multi-select elements=model.dispoItems
        selectIds=model.dispoItems_}}
    </div>
    <div class="col-2 text-center mx-auto pt-5">
      <button class="btn btn-secondary mt-3 my-1" style="width:80%;" onclick="{addToIncluded};"> <i class="fas fa-angle-right"></i> </button>
      <button class="btn btn-secondary my-1" style="width:80%;"> <i class="fas fa-angle-double-right"></i> </button>
      <button class="btn btn-secondary my-1" style="width:80%;"> <i class="fas fa-angle-left"></i> </button>
      <button class="btn btn-secondary my-1" style="width:80%;"> <i class="fas fa-angle-double-left"></i> </button>
    </div>
    <div class="col-5">
      <p>Produits sélectionnés</p>
      {{multi-select elements=model.includedItems
        selectIds=model.includedItemsIds_}}

    </div>
  </div>
  <div class="mt-2">

    <button class="btn btn-secondary " style="width:100%;">Etape suivante</button>
  </div>
</div>
{{outlet}}
